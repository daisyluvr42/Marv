EDGE_BASE_URL=http://127.0.0.1:8000
TELEGRAM_BOT_TOKEN=replace_with_bot_token
# Comma-separated Telegram user IDs with owner role.
TELEGRAM_OWNER_IDS=
# Optional chat whitelist (comma-separated chat IDs). Empty means allow all.
TELEGRAM_ALLOWED_CHAT_IDS=
TELEGRAM_POLL_TIMEOUT_SECONDS=20
TELEGRAM_TASK_WAIT_TIMEOUT_SECONDS=120
TELEGRAM_POLL_INTERVAL_SECONDS=0.2
TELEGRAM_ERROR_BACKOFF_SECONDS=2
TELEGRAM_DROP_PENDING_ON_START=true
TELEGRAM_REQUIRE_PAIRING=false

# APScheduler heartbeat runtime (OpenClaw-style periodic tasks)
HEARTBEAT_ENABLED=true
HEARTBEAT_MODE=interval
HEARTBEAT_INTERVAL_SECONDS=60
HEARTBEAT_CRON="*/1 * * * *"
HEARTBEAT_CORE_HEALTH_ENABLED=true
HEARTBEAT_RESUME_APPROVED_TOOLS_ENABLED=true
HEARTBEAT_EMIT_EVENTS=true
HEARTBEAT_SKILL_DISTILL_ENABLED=false
HEARTBEAT_SKILL_DISTILL_WINDOW_HOURS=24
HEARTBEAT_SKILL_DISTILL_MIN_OCCURRENCES=4
HEARTBEAT_SKILL_DISTILL_MAX_PATTERNS=8
HEARTBEAT_SKILL_DISTILL_MAX_DISTILL=3

# Optional core provider fallback matrix(JSON array)
# Example:
# CORE_PROVIDER_MATRIX_JSON=[{"name":"primary","base_url":"http://127.0.0.1:9000","timeout_seconds":5,"max_retries":1},{"name":"backup","base_url":"http://127.0.0.1:9001","timeout_seconds":5,"max_retries":0}]
CORE_PROVIDER_MATRIX_JSON=

# Optional IPC tools config file
# EDGE_IPC_TOOLS_PATH=./data/ipc-tools.json

# Optional IM ingress auth token(s)
# IM_INGRESS_TOKEN=replace_with_shared_secret
# IM_INGRESS_TOKENS_JSON={"discord":"token-a","slack":"token-b","*":"fallback"}

# Optional IM ingress sender policy (OpenClaw-style dm policy + allowlist)
# EDGE_IM_SECURITY_PATH=./data/im-security.json
# IM_INGRESS_SECURITY_JSON={"defaults":{"dm_policy":"open","allow_from":[]},"channels":{"discord":{"dm_policy":"allowlist","allow_from":["u-1"]}}}
